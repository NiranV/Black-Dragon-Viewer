<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Allgemein" name="general_panel">
	<scroll_container name="general_scroll">
		<panel name="general_scroll_panel">
			<text name="personal_options">
				Persönliche Optionen:
			</text>
			<text name="language_textbox">
				Sprache:
			</text>
			<radio_group name="language_radio">
				<radio_item label="Standard" name="System Default Language"/>
				<radio_item label="Englisch" name="English"/>
				<radio_item label="Deutsch" name="Deutsch(German)"/>
			</radio_group>
			<text name="language_textbox2">
				(Erfordert Neustart)
			</text>
			<text name="maturity_desired_prompt">
				Zeige inhalte für:
			</text>
			<text name="maturity_desired_textbox"/>
			<radio_group name="maturity_desired_radio">
				<radio_item label="Generell" name="General"/>
			</radio_group>
			<text name="start_location_textbox">
				Startstandort:
			</text>
			<radio_group name="start_location_radio">
				<radio_item label="Letzter Standort" name="MyLastLocation" tool_tip="Als Standardeinstellung in letztem Standort anmelden."/>
				<radio_item label="Zuhause" name="MyHome" tool_tip="Als Standardeinstellung in Zuhauseposition anmelden."/>
			</radio_group>
			<check_box initial_value="true" label="Beim Anmelden anzeigen" name="show_location_checkbox"/>
			<check_box label="Grid Auswahl beim Login anzeigen" name="show_grid_selection_check"/>
			<text name="name_tags_textbox">
				Avatarnamensoptionen:
			</text>
			<radio_group name="Name_Tag_Preference">
				<radio_item label="Aus" name="1"/>
				<radio_item label="An" name="2"/>
				<radio_item label="Kurz anzeigen" name="0"/>
			</radio_group>
			<slider label="Ausblendzeit (s):" name="name_fade_slider"/>
			<slider label="Ausblenden nach (s):" name="name_start_fade_slider"/>
			<check_box label="Meinen Namen anzeigen" name="show_my_name_checkbox1"/>
			<check_box initial_value="true" label="Kleine Avatarnamen" name="small_avatar_names_checkbox"/>
			<check_box label="Gruppentitel anzeigen" name="show_all_title_checkbox1"/>
			<check_box label="Anzeigenamen anzeigen" name="show_display_names_checkbox1"/>
			<check_box label="Freundnamen vorheben" name="show_friends_checkbox1"/>
			<check_box label="Accountnamen anzeigen" name="show_usernames_checkbox1"/>
			<check_box label="Anzeigenamen erlauben" name="display_names_check"/>
			<text name="login_options">
				Loginoptionen:
			</text>
			<check_box label="Automatisch anmelden" name="Auto_login"/>
			<check_box label="Fliegen beim Login" name="Flying_At_Exit" tool_tip="Automatisch Flug Modus einschalten wenn du dich fliegend abgemeldet hast"/>
			<text name="title_afk_text">
				Zeit bis zur Abwesenheit:
			</text>
			<color_swatch label="" name="effect_color_swatch" tool_tip="Klicken Sie hier, um die Farbauswahl zu öffnen"/>
			<combo_box label="Timeout für Abwesenheit:" name="afk">
				<combo_box.item label="2 Minuten" name="item0"/>
				<combo_box.item label="5 Minuten" name="item1"/>
				<combo_box.item label="10 Minuten" name="item2"/>
				<combo_box.item label="15 Minuten" name="item3"/>
                <combo_box.item label="30 Minuten" name="item4"/>
				<combo_box.item label="Nie" name="item5"/>
			</combo_box>
			<text name="text_box3">
				Antwort, wenn im „Nicht Stören“-Modus:
			</text>
            <button label="⌊standard⌉" name="default"/>
            <button label="⌊standard⌉" name="default"/>
		</panel>
	</scroll_container>
</panel>
