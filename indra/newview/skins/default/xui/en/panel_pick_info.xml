<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
follows="all"
height="560"
layout="topleft"
left="0"
min_height="350"
name="panel_pick_info"
top="0"
width="325">
 <icon
 follows="all"
 height="528"
 color="1 1 1 1"
 image_name="Panel_Background"
 layout="topleft"
 name="vicon"
 mouse_opaque="false"
 visible="true"
 width="308"
 top="26"
 left="9"/>
 <button
 follows="top|left"
 height="25"
 image_overlay="BackArrow_Off"
 image_hover_unselected="Toolbar_Middle_Over"
 image_selected="Toolbar_Middle_Selected"
 image_unselected="Toolbar_Middle_Off"
 layout="topleft"
 name="back_btn"
 left="11"
 tab_stop="false"
 top="2"
 width="31"
 use_draw_context_alpha="false" />
 <icon
 follows="top|left|right"
 height="25"
 image_name="Toolbar_Middle_Off"
 layout="topleft"
 left_pad="1"
 top_delta="0"
 name="dummy_icon"
 width="240"/>
 <text
 follows="top|left|right"
 height="14"
 layout="topleft"
 left_delta="3"
 name="title"
 text_color="LtGray"
 top="3"
 value="Pick Info"
 use_ellipses="true"
 width="237" />
 <text_editor
 allow_scroll="false"
 bg_visible="false"
 follows="left|top|right"
 h_pad="0"
 height="14"
 width="237"
 layout="topleft"
 left_delta="0"
 top_pad="-4"
 name="pick_name"
 read_only="true"
 text_readonly_color="LabelTextColor"
 v_pad="0"
 value="[name]"
 use_ellipses="true" />
 <button
 follows="top|right"
 height="25"
 image_overlay="Edit_Wrench"
 image_hover_unselected="Toolbar_Middle_Over"
 image_selected="Toolbar_Middle_Selected"
 image_unselected="Toolbar_Middle_Off"
 layout="topleft"
 name="edit_btn"
 top_delta="-11"
 left_pad="1"
 width="31" />
 <scroll_container
 follows="all"
 height="500"
 layout="topleft"
 left="11"
 top_pad="0"
 name="profile_scroll"
 width="304">
  <panel
  name="scroll_content_panel"
  follows="top|left|right"
  layout="topleft"
  top="0"
  height="500"
  left="0"
  width="284">
   <panel
   follows="left|top|right"
   height="20"
   bg_visible="true"
   bg_alpha_color="0.10 0.43 0.77 0.28"
   layout="topleft"
   mouse_opaque="false"
   left="0"
   name="title"
   top_pad="1"
   width="304"/>
   <text_editor
   allow_scroll="false"
   bg_visible="false"
   follows="left|top|right"
   h_pad="0"
   height="14"
   top_delta="4"
   layout="topleft"
   left="5"
   name="pick_location"
   read_only="true"
   text_readonly_color="LabelTextColor"
   width="284"
   word_wrap="false"
   v_pad="0"
   line_spacing.pixels="-3" 
   value="[loading...]" />
   <texture_picker
   fallback_image="default_land_picture.j2c"
   enabled="false"
   follows="left|top|right"
   height="197"
   layout="topleft"
   left="4"
   name="pick_snapshot"
   top_pad="7"
   width="285" />
   <panel
   follows="left|top|right"
   height="20"
   bg_visible="true"
   bg_alpha_color="0.10 0.43 0.77 0.28"
   layout="topleft"
   mouse_opaque="false"
   left="0"
   name="title"
   top_pad="-15"
   width="304"/>
   <text
   follows="left|top"
   type="string"
   height="10"
   layout="topleft"
   left="5"
   top_delta="4"
   name="group_settngs_label"
   width="120">
   Description:
   </text>
   <text_editor
   bg_readonly_color="Transparent"
   follows="all"
   height="264"
   width="289"
   parse_urls="true"	
   layout="topleft"
   left_delta="0"
   top_pad="12"
   h_pad="0"
   v_pad="0"
   max_length="1023"
   name="pick_desc"
   read_only="true"
   text_readonly_color="LabelTextColor"
   value="[description]"
   wrap="true" />
  </panel>
 </scroll_container>
 <panel
 follows="left|right|bottom"
 background_visible="false"
 height="25"
 layout="topleft"
 top_pad="1"
 width="304"
 left="11"
 name="buttons">
  <button
  follows="bottom|left|right"
  height="25"
  label="Teleport"
  layout="topleft"
  image_hover_unselected="Toolbar_Middle_Over"
  image_selected="Toolbar_Middle_Selected"
  image_unselected="Toolbar_Middle_Off"
  name="teleport_btn"
  top="0"
  width="168" />
  <button
  follows="top|right"
  height="25"
  layout="topleft"
  label="Show on Map"
  image_hover_unselected="Toolbar_Middle_Over"
  image_selected="Toolbar_Middle_Selected"
  image_unselected="Toolbar_Middle_Off"
  name="show_on_map_btn"
  left_pad="1"
  top_delta="0"
  width="135" />
 </panel>
</panel>
