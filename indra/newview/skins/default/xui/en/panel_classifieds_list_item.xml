<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 bevel_style="none"
 follows="top|left|right"
 height="70"
 layout="topleft"
 left="0"
 name="classified_item"
 top="0"
 width="308">
    <icon
     follows="all"
     height="69"
     image_name="ListItem_Over"
     right="-1"
     left="2"
     mouse_opaque="false"
     name="hovered_icon"
     top="1"
     scale_image="true"
     visible="false"
     width="306"/>
    <icon
     follows="all"
     height="69"
     image_name="ListItem_Select"
     right="-1"
     left="2"
     mouse_opaque="false"
     name="selected_icon"
     top="1"
     scale_image="true"
     visible="false"
     width="306"/>
    <texture_picker
     allow_no_texture="true"
     border_enabled="true"
     fallback_image="default_land_picture.j2c"
     enabled="false"
     follows="left|top"
     height="81"
     layout="topleft"
     left="9"
     mouse_opaque="false"
     name="picture"
     tab_stop="false"
     top="5"
     width="90" />
    <text
     follows="top|left|right"
     font="SansSerifSmall"
     height="15"
     layout="topleft"
     left_pad="3"
     name="name"
     text_color="white"
     top="5"
     use_ellipses="true"
     width="172"
     word_wrap="false" />
    <expandable_text
     follows="top|left|right"
     font="SansSerifSmall"
     height="45"
     layout="topleft"
     left_delta="0"
     name="description"
     textbox.max_length="1024"
     textbox.show_context_menu="false" 
     top_pad="0"
     width="172"
     word_wrap="true" />
    <button
     follows="top|right"
     height="62"
     image_overlay="ForwardArrow_Off"
     image_hover_unselected="Toolbar_Middle_Over"
     image_selected="Toolbar_Middle_Selected"
     image_unselected="Toolbar_Middle_Off"
     layout="topleft"
     left_pad="7"
     right="-5"
     name="info_chevron"
     top="5"
     width="25" />
</panel>
