<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 positioning="cascading"
 save_rect="true"
 legacy_header_height="18"
 can_resize="true"
 height="450"
 name="gestures"
 title="Gestures"
 background_visible="true"
 label="Places"
 layout="topleft"
 min_height="350"
 min_width="240"
 width="313">
    <floater.string
     name="loading">
        Loading...
    </floater.string>
    <floater.string
     name="playing">
        (Playing)
    </floater.string>
    <!-- It's used to build new name for gesture created by "Copy" menu item -->
    <floater.string
     name="copy_name">Copy of [COPY_NAME]</floater.string>
    <scroll_list
     bottom_delta="416"
     draw_heading="true"
      bg_writeable_color="White_02"
      bg_readonly_color="White_02"
     follows="all"
     layout="topleft"
     left="8"
     right="-7"
     multi_select="true"
     top="20"
     name="gesture_list">
        <scroll_list.columns
         label="Name"
         name="name"
         width="150" />
        <scroll_list.columns
         label="Chat"
         name="trigger"
         width="80" />
       <scroll_list.columns
         label=""
         name="key"
         width="-1" />
        <scroll_list.columns
         label="Key"
         name="shortcut"
         width="80" />
    </scroll_list>
 <panel
  background_visible="true"
  bg_alpha_color="White_02"
  bevel_style="none"
  top_pad="-1"
  follows="left|right|bottom"
  height="25"
  label="bottom_panel"
  layout="topleft"
  left="8"
  name="bottom_panel"
  width="296">
   <menu_button
    follows="bottom|left"
    height="25"
    image_overlay="OptionsMenu_Off"
    image_hover_unselected="Toolbar_Middle_Over"
    image_selected="Toolbar_Middle_Selected"
    image_unselected="Toolbar_Middle_Off"
    layout="topleft"
    left="0"
    menu_filename="menu_gesture_gear.xml"
    name="gear_btn"
    top="0"
    tool_tip="More options"
    width="31" />
   <button
      follows="bottom|left"
      font="SansSerifBigBold"
      height="25"
      image_overlay="AddItem_Off"
      image_hover_unselected="Toolbar_Middle_Over"
    image_selected="Toolbar_Middle_Selected"
    image_unselected="Toolbar_Middle_Off"
      layout="topleft"
      left_pad="1"
      name="new_gesture_btn"
      tool_tip="Make new gesture"
      top_delta="0"
      width="31" />
   <button
      follows="bottom|left"
      font="SansSerifBigBold"
      height="25"
      image_overlay="Check_Mark"
      image_hover_unselected="Toolbar_Middle_Over"
    image_selected="Toolbar_Middle_Selected"
    image_unselected="Toolbar_Middle_Off"
      layout="topleft"
      left_pad="1"
      name="activate_btn"
      tool_tip="Activate/Deactivate selected gesture"
      top_delta="0"
      width="31" />
   <!--<icon
  follows="top|left|right"
  height="25"
  image_name="Toolbar_Middle_Off"
  layout="topleft"
  left_pad="1"
  top_delta="0"
  name="dummy_icon"
  width="175"/>-->
    <button
     follows="left|bottom|right"
     height="25"
     label="Edit"
     layout="topleft"
     image_hover_unselected="Toolbar_Middle_Over"
    image_selected="Toolbar_Middle_Selected"
    image_unselected="Toolbar_Middle_Off"
     left_pad="1"
     name="edit_btn"
     top_delta="0"
     width="84" />
    <button
     follows="right|bottom"
     height="25"
     label="Play"
     layout="topleft"
     image_hover_unselected="Toolbar_Middle_Over"
    image_selected="Toolbar_Middle_Selected"
    image_unselected="Toolbar_Middle_Off"
     left_pad="1"
     name="play_btn"
     top_delta="0"
     width="83" />
    <button
     follows="right|bottom"
     height="25"
     label="Stop"
     image_hover_unselected="Toolbar_Middle_Over"
    image_selected="Toolbar_Middle_Selected"
    image_unselected="Toolbar_Middle_Off"
     layout="topleft"
     left_delta="0"
     visible="false"
     name="stop_btn"
     top_delta="0"
     width="83" />
    <button
      follows="bottom|right"
      font="SansSerifBigBold"
      height="25"
      image_overlay="TrashItem_Off"
      image_hover_unselected="Toolbar_Middle_Over"
    image_selected="Toolbar_Middle_Selected"
    image_unselected="Toolbar_Middle_Off"
      layout="topleft"
      name="del_btn"
      left_pad="1"
      tool_tip="Delete this gesture"
      top_delta="0"
      width="31" />
 </panel>
</floater>
