<?xml version="1.0" encoding="UTF-8"?>
<panel
border="false"
follows="all"
height="408"
label="Keybinds"
mouse_opaque="false"
layout="topleft"
left="0"
name="Keybindings panel"
top="45"
width="510">
 <panel
 follows="left|top|right"
 height="20"
 bg_visible="true"
 bg_alpha_color="0.10 0.43 0.77 0.28"
 layout="topleft"
 mouse_opaque="false"
 left="1"
 name="title"
 top="0"
 width="508"/>
 
 <text
 name="third_person_label"
 follows="left|top"
 layout="topleft"
 left="10"
 height="12"
 width="350"
 top_delta="4">
 Keybindings:
 </text>
 <scroll_list
 column_padding="2"
 draw_heading="true"
 height="369"
 follows="left|top|right"
 layout="topleft"
 left_delta="-11"
 width="512"
 multi_select="true"
 name="scroll_mode"
 top_pad="3">
    <scroll_list.columns
     label="Action"
     name="action"
   relative_width="0.30"  />
    <scroll_list.columns
     label="Function Name"
     name="function"
   relative_width="0.35"  />
    <scroll_list.columns
     label="Button"
     name="button"
   relative_width="0.15"  />
    <scroll_list.columns
     label="Modifiers"
     name="modifiers"
   relative_width="0.20"  />
</scroll_list>
 
 <panel
  layout="topleft"
  follows="left|bottom"
  height="22"
  name="buttons_panel"
  top="-22"
  mouse_opaque="false"
  background_visible="false"
  left="1"
  width="510">
  <combo_box
	follows="top|left"
	layout="topleft"
	left="0"
	height="20"
 label="Mode"
 initial_value="1"
	name="keybinding_mode"
	allow_text_entry="true"
	top="1"
	width="142">
  <combo_box.item
  label="Third Person"
  name="Third Person"
  value="1" />
  <combo_box.item
  label="First Person"
  name="First Person"
  value="0" />
  <combo_box.item
  label="Editing"
  name="Editing"
  value="2" />
  <combo_box.item
  label="Appearance"
  name="Appearance"
  value="3" />
  <combo_box.item
  label="Sitting"
  name="Sitting"
  value="4" />
		<combo_box.combo_button
		image_unselected="ComboToolbarButton_Off"
		image_selected="ComboToolbarButton_Selected"
		image_pressed="ComboToolbarButton_Selected" 
		image_pressed_selected="ComboToolbarButton_Selected"/>
		<combo_box.drop_down_button
		image_unselected="ComboToolbarButton_Off"
		image_selected="ComboToolbarButton_Selected"
		image_pressed="ComboToolbarButton_Selected" 
		image_pressed_selected="ComboToolbarButton_Selected"
		image_disabled="ComboToolbarButton_Disabled"/>
  <combo_box.commit_callback
  function="Pref.ChangeMode"/>
	</combo_box>
  <button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Add"
 image_overlay_alignment="left"
    image_overlay="AddItem_Off"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
		tool_tip="This button opens the bind popup to add a new entry into the above list and assign a key to the currently selected action."
 name="add"
 width="60"
 top_delta="0"
 left_pad="-7">
   <button.commit_callback
   function="Pref.AddBind"/>
 </button>
	<button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Modify"
 image_overlay_alignment="left"
    image_overlay="OptionsMenu_Off"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
		tool_tip="This button opens the bind popup for the currently selected entry and allows you to assign a new key to the selected action in the above list. (Alternatively: Double-Click &lt;green&gt;LeftMouseButton&lt;/green&gt;)"
 name="change"
 width="75"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Pref.ChangeBind"/>
 </button>
 <button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Delete"
 image_overlay_alignment="left"
    image_overlay="TrashItem_Off"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
		tool_tip="This button removes the currently selected entries which unbinds all keys and actions bound to them."
 name="remove"
 width="70"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Pref.RemoveBind"/>
 </button>
 <button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Reset All"
 image_overlay_alignment="left"
    image_overlay="Refresh_Off"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
 name="default"
 width="81"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Pref.DefaultControls"/>
 </button>
 <button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Delete All"
 image_overlay_alignment="left"
    image_overlay="TrashItem_Off"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
 name="unbind"
 width="86"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Pref.UnbindAll"/>
 </button>
	</panel>
</panel>
