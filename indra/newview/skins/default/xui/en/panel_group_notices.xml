<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 height="500"
 label="Notices"
 layout="topleft"
 left="0"
 name="notices_tab"
 follows="all"
 top="0"
 width="316">
    <panel.string
     name="help_text">
        Notices let you send a message and an optionally attached item.
Notices only go to group members in Roles with the ability to receive Notices.
You can turn off Notices on the General tab.
    </panel.string>
    <panel.string
     name="no_notices_text">
        There are no past notices
    </panel.string>
    <scroll_container
         color="Transparent"
         follows="all"
         layout="topleft"
         mouse_opaque="false"
         left="0"
         name="roles_scroll"
         opaque="true"
         height="498"
         width="315"
         top="1">
      <panel
         bevel_style="none"
         border="false"
         follows="top|left|right"
         height="395"
         width="299"
         layout="topleft"
         left="0"
         name="preferences_container"
         top="0">
         <button
       follows="top|left"
       height="25"
       image_overlay="AddItem_Off"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       layout="topleft"
       left="5"
       name="create_new_notice"
       tool_tip="Create a new notice"
       top="5"
       width="31" />
         <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left_pad="1"
         top_delta="0"
         width="231" />
    <text
      follows="left|top"
     type="string"
     word_wrap="true"
     height="24"
     halign="left"
     layout="topleft"
     text_color="White_50"
     left_delta="3"
     name="lbl2"
     top="5"
     width="227">
     Notices are kept for 14 days.
Maximum 200 per group daily
    </text>
    <button
     follows="top|right"
     height="25"
     image_overlay="Refresh_Off"
     image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
     layout="topleft"
     name="refresh_notices"
     left_pad="2"
     tool_tip="Refresh list of notices"
     top_delta="0"
     width="31" />
    <scroll_list
     column_padding="2"
      draw_heading="true"
      height="120"
      follows="left|top|right"
      layout="topleft"
      left="3"
      width="299"
      multi_select="true"
     name="notice_list"
     top_pad="3">
        <scroll_list.columns
         label=""
         name="icon"
         width="20" />
        <scroll_list.columns
         label="Subject"
         name="subject"
         width="110" />
        <scroll_list.columns
         label="From"
         name="from"
         width="100" />
        <scroll_list.columns
         label="Date"
         name="date"
         width="60" />
        <scroll_list.columns
         name="sort"
         width="-1" />
    </scroll_list>
    <text
     follows="left|top"
     type="string"
     layout="topleft"
     height="14"
     left="5"
     top_pad="-14"
     name="notice_list_none_found"
     visible="true">
        None found
    </text>
    <panel
     follows="left|top|right"
     height="245"
     label="Create New Notice"
     layout="topleft"
     left="0"
     top_pad="0"
     visible="false"
     name="panel_create_new_notice"
         width="300">
      <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top="5"
         width="295" />
        <text
         follows="left|top"
         type="string"
         height="16"
         layout="topleft"
         left="8"
         mouse_opaque="false"
         name="lbl"
         top_delta="5"
         width="220">
            Create a Notice
        </text>
        <icon
         follows="top|left"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top_pad="8"
         width="60" />
        <text
         follows="left|top"
         type="string"
         halign="left"
         height="16"
         left="8"
         layout="topleft"
         name="lbl3"
         top_delta="5"
         width="62">
            Subject:
        </text>
        <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left_pad="-4"
         top_delta="-5"
         width="234" />
        <line_editor
         follows="left|top|right"
         layout="topleft"
         height="23"
         left_delta="2"
         top_delta="1"
         max_length_bytes="63"
         name="create_subject"
         prevalidate_callback="ascii"
         spellcheck="true"
         width="230" />
        <icon
         follows="top|left"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top_pad="5"
         width="60" />
        <text
         follows="left|top"
         type="string"
         halign="left"
         height="16"
         left="8"
         layout="topleft"
         name="lbl4"
         top_delta="5"
         width="62">
            Message:
        </text>
        <icon
         follows="top|left|right"
         height="95"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left_pad="-4"
         top_delta="-5"
         width="234" />
        <text_editor
         follows="left|top|right"
         height="90"
         layout="topleft"
         left_delta="3"
         max_length="511"
         name="create_message"
         spellcheck="true"
         top_delta="2"
         width="228"
         word_wrap="true" />
        <icon
         follows="top|left"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top_pad="6"
         width="60" />
        <text
         follows="left|top"
         type="string"
         halign="left"
         height="16"
         left="8"
         layout="topleft"
         top_delta="5"
         name="lbl5"
         width="62">
            Attach:
        </text>
        <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left_pad="-4"
         top_delta="-5"
         width="234" />
        <line_editor
         follows="left|top|right"
         layout="topleft"
         height="23"
         left_delta="2"
         top_delta="1"
         max_length_bytes="90"
         mouse_opaque="false"
         name="create_inventory_name"
         width="230" />
        <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top_pad="5"
         width="207" />
        <text
         follows="left|top|right"
         type="string"
         halign="left"
         height="16"
         layout="topleft"
         left="8"
         right="-90"
         name="string"
         top_delta="5"
         word_wrap="true"
         width="200">
            Drag and drop item here to attach it:
        </text>
        <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left_pad="1"
         top_delta="-5"
         width="31" />
        <icon
         height="22"
         follows="top|right"
         image_name="DropTarget"
         layout="topleft"
         left_delta="3"
         mouse_opaque="true"
         name="drop_icon"
         top_delta="1"
         width="27" />
        <group_drop_target
         height="23"
         follows="top|right"
         top_delta="0"
         left_delta="0"
         layout="topleft"
         name="drop_target"
         tool_tip="Drag an inventory item onto this target box to send it with this notice. You must have permission to copy and transfer the item in order to attach it."
         width="27" />
        <button
         follows="right|top"
         layout="topleft"
         left_pad="2"
         top_delta="-1"
         image_hover_unselected="Toolbar_Middle_Over"
             image_selected="Toolbar_Middle_Selected"
             image_unselected="Toolbar_Middle_Off"
         height="25"
         width="25"
         name="open_inventory"
         label="..."
         tool_tip="Open Inventory">
			<button.init_callback
				 function="Button.SetFloaterToggle"
				 parameter="inventory"/>
		</button>
        <button
         layout="topleft"
         follows="top|right"
         left_pad="1"
         name="remove_attachment"
         top_delta="0"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
             image_overlay="TrashItem_Off"
             image_selected="Toolbar_Middle_Selected"
             image_unselected="Toolbar_Middle_Off"
                 tool_tip="Remove attachment from your notification"
                 width="31" />
        <button
         follows="left|top|right"
         height="23"
         image_hover_unselected="Toolbar_Middle_Over"
             image_selected="Toolbar_Middle_Selected"
             image_unselected="Toolbar_Middle_Off"
         label="Send"
         label_selected="Send"
         layout="topleft"
         left="5"
         top_pad="4"
         name="send_notice"
         width="295" />
   </panel>
    <panel
     follows="left|top|right"
     height="210"
     label="View Past Notice"
     layout="topleft"
     left="0"
     visible="true"
     name="panel_view_past_notice"
     top_delta="0"
    width="300">
      <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top="5"
         width="295" />
        <text
         type="string"
         height="16"
         layout="topleft"
         left="8"
         mouse_opaque="false"
         name="lbl"
         top_delta="5"
         width="265">
            Archived Notice
        </text>
        <text
         type="string"
         height="16"
         word_wrap="true"
         layout="topleft"
         left_delta="0"
         name="lbl2"
         top_pad="8"
         width="265">
            To send a new notice, click the + button
        </text>
        <icon
         follows="top|left"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top_pad="3"
         width="60" />
        <text
         type="string"
         halign="left"
         height="16"
         layout="topleft"
         left="8"
         name="lbl3"
         top_delta="5"
         width="60">
            Subject:
        </text>
        <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left_pad="-2"
         top_delta="-5"
         width="234" />
        <line_editor
         border_style="line"
         follows="top|left|right"
         border_thickness="1"
         enabled="false"
         height="23"
         layout="topleft"
         left_delta="2"
         max_length_bytes="63"
         name="view_subject"
         spellcheck="true"
         top_delta="1"
         width="230" />
        <icon
         follows="top|left"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top_pad="5"
         width="60" />
        <text
         type="string"
         halign="left"
         height="16"
         layout="topleft"
         left="8"
         name="lbl4"
         top_delta="5"
         visible="true"
         width="60">
            Message:
        </text>
        <icon
         follows="top|left|right"
         height="95"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left_pad="-2"
         top_delta="-5"
         width="234" />
        <text_editor
         follows="left|top|right"
         height="90"
         layout="topleft"
         left_delta="3"
         max_length="511"
         name="view_message"
         spellcheck="true"
         top_delta="2"
         width="228"
         word_wrap="true" />
        <icon
         follows="top|left|right"
         height="25"
         name="bg"
         mouse_opaque="false"
         image_name="Toolbar_Middle_Off"
         left="5"
         top_pad="7"
         width="221" />
        <line_editor
         enabled="false"
         follows="top|left|right"
         height="23"
         layout="topleft"
         left="7"
         right="-76"
         max_length_bytes="63"
         mouse_opaque="false"
         name="view_inventory_name"
         top_delta="1"
         width="210"/>
        <button
         follows="right|top"
         image_hover_unselected="Toolbar_Middle_Over"
             image_selected="Toolbar_Middle_Selected"
             image_unselected="Toolbar_Middle_Off"
         height="25"
         label="Open"
         layout="topleft"
         left_pad="3"
         name="open_attachment"
         top_delta="-1"
         width="73" />
        </panel>
      </panel>
    </scroll_container>
</panel>
