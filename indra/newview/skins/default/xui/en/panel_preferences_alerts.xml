<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 height="408"
 label="Popups"
 layout="topleft"
 left="0"
 name="popups"
 top="45"
 width="510">
<panel
 follows="left|top|right"
 height="20"
 bg_visible="true"
 bg_alpha_color="0.10 0.43 0.77 0.28"
 layout="topleft"
 mouse_opaque="false"
 left="1"
 name="title"
 top="1"
 width="508"/>
      <text
       type="string"
       length="1"
       follows="top|left"
       height="12"
       layout="topleft"
       left="10"
       name="tell_me_label"
       top_delta="4"
       width="300">
	  Notification Options:
      </text>
      <check_box
       control_name="NotifyMoneySpend"
       height="16"
       label="Notify me when I spend L$"
       tool_tip="This option toggles whether a notification should be shown at the top right corner whenever you spend L$ or not."
       layout="topleft"
       left="10"
       name="notify_money_spend_checkbox"
       top_pad="15"
       width="300" />
    <check_box
     control_name="NotifyMoneyReceived"
     height="16"
     label="Notify me when I get L$"
     tool_tip="This option toggles whether a notification should be shown at the top right corner whenever you receive L$ or not."
     layout="topleft"
     left_delta="0"
     top_pad="0"	
     name="notify_money_received_checkbox"     
     width="300" />
      <check_box
       control_name="ChatOnlineNotification"
       height="16"
       label="Notify me when my friends log in or out"
       tool_tip="This option toggles whether a notification should be shown at the top right corner whenever a friend logs in or out."
       layout="topleft"
       left_delta="0"
       name="friends_online_notify_checkbox"
       top_pad="0"
       width="300" />
      <check_box
	control_name="DebugAvatarRezTime"
	height="16"
	initial_value="false"
	label="Notify me how much time Avatars took to rez"
    tool_tip="This option toggles whether a notification should be shown at the top right corner showing you how long each avatar took to fully load."
	layout="topleft"
	left_delta="0"
	name="DebugAvatarRezTime"
	top_pad="0"
	width="256" />
	  
<panel
 follows="left|top|right"
 height="20"
 bg_visible="true"
 bg_alpha_color="0.10 0.43 0.77 0.28"
 layout="topleft"
 mouse_opaque="false"
 left="1"
 name="title"
 top_pad="10"
 width="508"/>
      <text
       type="string"
       length="1"
       follows="top|left"
       height="12"
       layout="topleft"
       left="10"
       name="tell_me_label"
       top_delta="4"
       width="300">
	  Notification Appearance Options:
      </text>
      <slider
   can_edit_text="true"
   control_name="NotificationTipToastLifeTime"
   decimal_digits="0"
   follows="left|top"
   height="15"
   increment="1"
   initial_value="10"
   layout="topleft"
   label_width="150"
   label="Notification Tip Life Time:"
   tool_tip="This option controls the amount of time in seconds a notification such as friend online status should remain onscreen before they start fading."
   left="10"
   top_pad="15"
   max_val="30"
   min_val="0"
   name="NotificationTipToastLifeTime"
   show_text="true" />
   <button
 follows="left|top"
 control_name="NotificationTipToastLifeTime"
 height="15"
 is_toggle="false"
 label="⌊default⌉"
 image_selected="PushButton_Default_Off"
 image_unselected="PushButton_Default_Off"
 layout="topleft"
 left="370"
 top_delta="0"
 name="default"
 width="60">
       <button.commit_callback
                                 function="Pref.Default"/>
      </button>
   <slider
   can_edit_text="true"
   control_name="NotificationToastLifeTime"
   decimal_digits="0"
   follows="left|top"
   height="15"
   increment="1"
   initial_value="15"
   layout="topleft"
   label_width="150"
   label="Notification Life Time"
   tool_tip="This option controls the amount of time in seconds notifications such as IMs and group IMs should remain onscreen before they start fading."
   left="10"
   top_pad="1"
   max_val="60"
   min_val="1"
   name="NotificationToastLifeTime"
   show_text="true"/>
   <button
 follows="left|top"
 control_name="NotificationToastLifeTime"
 height="15"
 is_toggle="false"
 label="⌊default⌉"
 image_selected="PushButton_Default_Off"
 image_unselected="PushButton_Default_Off"
 layout="topleft"
 left="370"
 top_delta="0"
 name="default"
 width="60">
       <button.commit_callback
                                 function="Pref.Default"/>
      </button>
	  
	  <panel
 follows="left|top|right"
 height="20"
 bg_visible="true"
 bg_alpha_color="0.10 0.43 0.77 0.28"
 layout="topleft"
 mouse_opaque="false"
 left="1"
 name="title"
 top_pad="10"
 width="508"/>
      <text
       type="string"
       length="1"
       follows="top|left"
       height="12"
       layout="topleft"
       left="10"
       name="show_label"
       top_delta="4"
       width="300">
	  Always show Notification:
      </text>
      <scroll_list
       follows="top|left"
       height="73"
       layout="topleft"
       left="10"
       top_pad="15"
       multi_select="true"
       name="enabled_popups"
       background_visible="true"
       sort_column="0"
       sort_ascending="true" 
       width="470" />
	  <button
       enabled_control="FirstSelectedEnabledPopups"
       follows="top|left"
       height="73"
       image_overlay="Arrow_Down"
       hover_glow_amount="0.15"
       tool_tip="This button moves the currently selected notification into the list below and thus prevents it from showing up."
       layout="topleft"
       left_pad="2"
       name="disable_this_popup"
       top_delta="0"
       width="25">
		  <button.commit_callback
                                 function="Pref.ClickDisablePopup"/>
      </button>
	  <panel
 follows="left|top|right"
 height="20"
 bg_visible="true"
 bg_alpha_color="0.10 0.43 0.77 0.28"
 layout="topleft"
 mouse_opaque="false"
 left="1"
 name="title"
 top_pad="11"
 width="508"/>
      <text
       type="string"
       length="1"
       follows="top|left"
       height="12"
       layout="topleft"
       left="10"
       name="dont_show_label"
       top_delta="4"
       width="300">
	  Never show Notification:
      </text>
      <scroll_list
       follows="top|left"
       height="73"
       layout="topleft"
       left="10"
       top_pad="15"
       background_visible="true"
       sort_column="0"
       sort_ascending="true"
       multi_select="true"
       name="disabled_popups"
       width="470" />
      <button
       enabled_control="FirstSelectedDisabledPopups"
       follows="top|left"
       height="73"
       image_overlay="Arrow_Up"
       hover_glow_amount="0.15"
       tool_tip="This button moves the currently selected notification into the list above and thus allows it to be shown whenever it is triggered."
       layout="topleft"
       left_pad="2"
       name="enable_this_popup"
       top_delta="0"
       width="25">
		  <button.commit_callback
                                 function="Pref.ClickEnablePopup"/>
      </button>
</panel>
