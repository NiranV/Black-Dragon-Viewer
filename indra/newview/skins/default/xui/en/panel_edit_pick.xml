<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_visible="false"
 bevel_style="in"
 follows="left|top|right|bottom"
 height="549"
 label="Edit Pick"
 layout="topleft"
 left="0"
 min_height="350"
 name="panel_edit_pick"
 help_topic="profile_edit_pick"
 top="0"
 width="333">
 <panel.string
  name="location_notice">
    (will update after save)
 </panel.string>
  <button
     follows="top|left"
     height="25"
     image_overlay="BackArrow_Off"
     image_hover_unselected="Toolbar_Middle_Over"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
     layout="topleft"
     name="back_btn"
     left="11"
     tab_stop="false"
     top="0"
     width="31"
     use_draw_context_alpha="false" />
    <icon
       follows="top|left|right"
       height="25"
       image_name="Toolbar_Middle_Off"
       layout="topleft"
       left_pad="1"
       top_delta="0"
       name="dummy_icon"
       width="280"/>
   <text
     follows="top|left|right"
     height="14"
     layout="topleft"
     left_delta="3"
     name="title"
     text_color="LtGray"
     top="1"
     halign="right"
     value="Edit Pick"
     use_ellipses="true"
     width="267" />
   <icon
       follows="all"
       height="513"
       image_name="Panel_Background"
       layout="topleft"
       left="10"
       top="29"
       name="dummy_icon"
       width="314"/>
   <scroll_container
     opaque="false"
     follows="all"
     height="488"
     layout="topleft"
     left="12"
     top="29"
     name="profile_scroll"
     width="311">
    <panel
     name="scroll_content_panel"
     follows="top|left|right"
     layout="topleft"
     top="0"
     height="369"
     left="0"
     width="290">
    <texture_picker
         fallback_image="default_land_picture.j2c"
         follows="left|top|right"
         height="197"
         layout="topleft"
         left="0"
         name="pick_snapshot"
         top="10"
         width="295" />
          <icon
       follows="top|left|right"
       height="25"
       image_name="Toolbar_Middle_Off"
       layout="topleft"
       left="0"
       top_pad="-16"
       name="dummy_icon"
       width="80"/>
        <text
         type="string"
         length="1"
         follows="left|top|right"
         height="15"
         layout="topleft"
         left_delta="3"
         top_delta="5"
         name="Name:"
         width="77">
            Title:
        </text>
        <icon
       follows="top|left|right"
       height="25"
       image_name="Toolbar_Middle_Off"
       layout="topleft"
       left_pad="1"
       top_delta="-5"
       name="dummy_icon"
       width="214"/>
        <line_editor
         follows="left|top|right"
         font="SansSerif"
         height="23"
         layout="topleft"
         left_delta="2"
         top_delta="1"
         text_pad_left="4"
         max_length_bytes="63"
         name="pick_name"
         width="210" />
        <icon
       follows="top|left|right"
       height="25"
       image_name="Toolbar_Middle_Off"
       layout="topleft"
       left="0"
       top_pad="5"
       name="dummy_icon"
       width="80"/>
        <text
         type="string"
         length="1"
         follows="left|top|right"
         height="15"
         layout="topleft"
         left_delta="3"
         top_delta="5"
         name="description_label"
         width="77">
            Description:
        </text>
        <icon
       follows="top|left|right"
       height="89"
       image_name="Toolbar_Middle_Off"
       layout="topleft"
       left_pad="1"
       top_delta="-5"
       name="dummy_icon"
       width="214"/>
        <text_editor
         follows="left|top|right"
         height="85"
         width="209"
         hide_scrollbar="false"
         layout="topleft"
         left_delta="3"
         top_delta="1"
         max_length="1023"
         name="pick_desc"
         spellcheck="true"
         text_color="black"
         word_wrap="true" />
        <icon
       follows="top|left|right"
       height="25"
       image_name="Toolbar_Middle_Off"
       layout="topleft"
       left="0"
       top_pad="8"
       name="dummy_icon"
       width="80"/>
        <text
         type="string"
         length="1"
         follows="left|top|right"
         height="15"
         layout="topleft"
         left_delta="3"
         name="location_label"
         top_delta="5"
         width="77">
            Location:
        </text>
        <icon
       follows="top|left|right"
       height="25"
       image_name="Toolbar_Middle_Off"
       layout="topleft"
       left_pad="1"
       top_delta="-5"
       name="dummy_icon"
       width="214"/>
        <text
         type="string"
         length="1"
         follows="left|top|right"
         height="14"
         layout="topleft"
         left_delta="3"
         name="pick_location"
         top_delta="5"
         width="208">
            loading...
        </text>
        <button
         follows="left|top"
         height="25"
         label="Set to Current Location"
         image_hover_unselected="Toolbar_Middle_Over"
          image_selected="Toolbar_Middle_Selected"
          image_unselected="Toolbar_Middle_Off"
         layout="topleft"
         left="0"
         top_pad="10"
         name="set_to_curr_location_btn"
         width="295" />
    </panel>
    </scroll_container>
    <panel
     follows="left|right|bottom"
     height="23"
     label="bottom_panel"
     layout="topleft"
     left="11"
     name="bottom_panel"
     top_pad="1"
     width="314">
		        <button
		         follows="bottom|left"
		         height="23"
		         label="Save Pick"
		         layout="topleft"
                 image_hover_unselected="Toolbar_Middle_Over"
          image_selected="Toolbar_Middle_Selected"
          image_unselected="Toolbar_Middle_Off"
		         name="save_changes_btn"
		         top="0"
		         left="1"
		         width="154" />
			  
		        <button
		         follows="bottom|right"
		         height="23"
		         label="Cancel"
                 image_hover_unselected="Toolbar_Middle_Over"
          image_selected="Toolbar_Middle_Selected"
          image_unselected="Toolbar_Middle_Off"
		         layout="topleft"
		         name="cancel_btn"
		         top="0"
		         left_pad="1"
		        width="155" />
		  
    </panel>
</panel>
