<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_opaque="false"
 background_visible="false"
 bg_opaque_color="MouseGray"
 follows="left|top|right"
 focus_root="true" 
 height="45"
 layout="topleft"
 name="navigation_bar"
 chrome="true"
 width="800">
	<icon
	 follows="top|left"
	 image_name="navbar/NavBar_BG.png"
	 mouse_opaque="false"
	 name="bg_icon"
	 scale_image="true"
	 visible="true"
	 left="0"
	 top="0"
	 height="50"
	 width="1920"/>
	 <layout_stack
       follows="top|left|right"
       height="50"
       layout="topleft"
       border_size="-5"
       left="0"
       mouse_opaque="false"
       name="nvp_stack"
       orientation="vertical"
       top="0"
       width="800">
         <layout_panel
           follows="top|left|right"
											auto_resize="false"
           layout="topleft"
											height="32"
											min_height="32"
           name="navigation_layout_panel"
           width="800">
	        <panel
	         follows="left|top|right"
	         top="0"
	         height="27"
	         layout="topleft"
          left="0"
	         name="navigation_panel"
          width="800">
	         <pull_button
	         follows="left|top"
	         direction="down"
	         height="23"
	         image_overlay="Arrow_Left_Off"
										image_selected="transparent.j2c"
										image_unselected="transparent.j2c"
	         image_bottom_pad="1"
	         layout="topleft"
	         left="55"
	         name="back_btn"
	         tool_tip="Go back to previous location"
	         top="2"
	         width="20" />
	        <pull_button
	         follows="left|top"
	         direction="down"
	         height="23"
	         image_overlay="Arrow_Right_Off"
										image_selected="transparent.j2c"
										image_unselected="transparent.j2c"
	         image_bottom_pad="1"
	         layout="topleft"
	         left_pad="-3"
	         name="forward_btn"
	         tool_tip="Go forward one location"
	         top_delta="0"
	         width="20" />
	        <button
	         follows="left|top"
	         height="23"
	         image_bottom_pad="1"
	         image_overlay="Home_Off"
										image_selected="transparent.j2c"
										image_unselected="transparent.j2c"
	         layout="topleft"
	         left_pad="7"
	         name="home_btn"
	         tool_tip="Teleport to my home location"
	         top_delta="0"
	         width="28" />
	        <location_input
                       follows="all"
	         halign="right"
	         height="23"
	         label="Location"
	         layout="topleft"
	         left_pad="7"
	         max_chars="254"
	         mouse_opaque="false"
	         name="location_combo"
	         top_delta="0"
                width="350">
             <combo_list
             mouse_wheel_opaque="true"/>
	        </location_input>
         </panel>
        </layout_panel>
         <layout_panel
           follows="top|left|right"
	         layout="topleft"
										height="18"
										min_width="18"
										auto_resize="false"
           name="favorites_layout_panel"
           width="320">

           <favorites_bar
             follows="left|right|top"
             font="SansSerifSmall"
             height="15"
             layout="topleft"
             left="0"
             top="0"
             name="favorite"
             image_drag_indication="Accordion_ArrowOpened_Off"
             tool_tip="Drag Landmarks here for quick access to your favorite places in Second Life!"
             width="320">
            <label
             follows="left|top"
             height="13"
             layout="topleft"
             left="10"
             name="favorites_bar_label"
             text_color="LtGray"
             tool_tip="Drag Landmarks here for quick access to your favorite places in Second Life!"
             top="13"
	     valign="bottom"
             width="102">
              Favorites Bar
            </label>
              <!-- More button actually is a text box. -->
              <more_button
                follows="left|bottom"
                name=">>"
                tab_stop="false"
                tool_tip="Show more of My Favorites"
                top="13"
                width="50"
                bottom="0"
                valign="bottom">
                More &#9660;
                </more_button>
         </favorites_bar>
         </layout_panel>
     
     </layout_stack>
</panel>
