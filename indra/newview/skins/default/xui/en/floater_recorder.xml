<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
positioning="centered"
legacy_header_height="18"
height="465"
layout="topleft"
name="floater_recorder"
save_rect="true"
can_resize="true"
title="Agent and Camera Recorder"
width="449">
	<tab_container
  follows="all"
  halign="center"
  height="445"
  layout="topleft"
  left="6"
  name="Picks Tabs"
  tab_min_width="118"
  tab_max_width="157"
  tab_height="20"
  tab_group="1"
  tab_position="top"
  top="20"
  width="449">
	<panel
    follows="all"
	background_visible="false"
    height="425"
    layout="topleft"
    left="0"
    title="Recorder"
    name="arc_panel"
    top="0"
    width="449">
		<icon
	follows="top|left|right"
	height="419"
	color="1 1 1 1"
	image_name="Panel_Background"
	layout="topleft"
	name="vicon"
	mouse_opaque="false"
	visible="true"
	width="435"
	top="0"
	left="0"/>
		<scroll_list
 column_padding="2"
 draw_heading="true"
 height="394"
 follows="left|top|right"
 layout="topleft"
 left="3"
 width="430"
 multi_select="true"
 name="recorder_scroll"
 top="2">
    <scroll_list.columns
     label="#"
     name="number"
   relative_width="0.10"  />
	<scroll_list.columns
     label="position"
     name="pos"
   relative_width="0.10"  />
	<scroll_list.columns
     label="rot x"
     name="rot_x"
   relative_width="0.10"  />
	<scroll_list.columns
     label="rot y"
     name="rot_y"
   relative_width="0.10"  />
	<scroll_list.columns
     label="rot z"
     name="rot_z"
   relative_width="0.10"  />
<scroll_list.columns
     label="target"
     name="target"
   relative_width="0.10"  />
<scroll_list.columns
     label="view"
     name="view"
   relative_width="0.10"  />
<scroll_list.columns
     label="type"
     name="type"
   relative_width="0.10"  />
<scroll_list.columns
     label="time"
     name="time"
   relative_width="0.10"  />
</scroll_list>
		<button
 height="21"
 follows="top|left"
 layout="topleft"
	
 label="Start Recording"
	label_selected="Stop Recording"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
 name="record"
 width="102"
 top_pad="1"
 left_delta="0">
   <button.commit_callback
   function="Recorder.Command"
   parameter="Record"/>
 </button>
		<button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Start Playing"
	label_selected="Stop Playing"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
 name="playback"
 width="102"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Recorder.Command"
   parameter="Playback"/>
 </button>
		<button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Enable Loop"
	label_selected="Disable Loop"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
 name="toggle_loop"
 width="102"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Recorder.Command"
   parameter="Loop"/>
 </button>
		<button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Refresh"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
 name="refresh"
 width="102"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Recorder.Command"
   parameter="Refresh"/>
 </button>
		<button
 height="21"
 follows="top|left"
 layout="topleft"
 label="Save Cam"
 image_hover_unselected="Toolbar_Middle_Over"
	 image_selected="Toolbar_Middle_Selected"
	 image_unselected="Toolbar_Middle_Off"
 name="save_cam"
 width="102"
 top_delta="0"
 left_pad="1">
   <button.commit_callback
   function="Recorder.Command"
   parameter="Save Camera"/>
 </button>
		
	</panel>
	</tab_container>
</floater>
