<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 name="panel_pick_info"
 top="0"
 left="0"
 height="360"
 width="310"
 follows="all"
 layout="topleft"
 help_topic="profile_pick_info">
    <panel.string
     name="location_notice">
        (will update after save)
    </panel.string>
    <texture_picker
     name="pick_snapshot"
     top="0"
     left="7"
     height="180"
     width="265"
     follows="left|top"
     layout="topleft"
     fallback_image="default_land_picture.j2c"/>
    <line_editor
     name="pick_name"
     enabled="false"
     top_pad="-15"
     left="7"
     height="20"
     width="299"
     follows="left|right|top"
     layout="topleft"/>
    <text_editor
     name="pick_desc"
     enabled="false"
     top_pad="7"
     left="7"
     height="111"
     width="299"
     follows="all"
     layout="topleft"
     allow_html="true"
     h_pad="4"
     max_length="1023"
     v_pad="3"
     word_wrap="true"/>
    <line_editor
     name="pick_location"
     enabled="false"
     left="7"
     height="20"
     width="299"
     top_pad="7"
     follows="left|right|bottom"
     layout="topleft"
     length="1"
     type="string">
        Loading...
    </line_editor>
    <button
     name="teleport_btn"
     label="Teleport"
     image_hover_unselected="Toolbar_Middle_Over"
                     image_selected="Toolbar_Middle_Selected"
                     image_unselected="Toolbar_Middle_Off"
     bottom="-1"
     left="7"
     height="23"
     width="66"
     follows="left|bottom"
     layout="topleft"/>
    <button
     name="show_on_map_btn"
     label="Map"
     image_hover_unselected="Toolbar_Middle_Over"
                     image_selected="Toolbar_Middle_Selected"
                     image_unselected="Toolbar_Middle_Off"
     bottom_delta="0"
     left_pad="1"
     height="23"
     width="66"
     follows="left|bottom"
     layout="topleft"/>
    <button
     name="set_to_curr_location_btn"
     label="Set"
     tool_tip="Set to Current Location"
     image_hover_unselected="Toolbar_Middle_Over"
                     image_selected="Toolbar_Middle_Selected"
                     image_unselected="Toolbar_Middle_Off"
     bottom_delta="0"
     left_pad="1"
     height="23"
     width="66"
     follows="left|bottom"
     layout="topleft"/>
    <button
     name="save_changes_btn"
     label="Save Pick"
     bottom_delta="0"
     image_hover_unselected="Toolbar_Middle_Over"
                     image_selected="Toolbar_Middle_Selected"
                     image_unselected="Toolbar_Middle_Off"
     left_pad="1"
     height="23"
     width="66"
     follows="left|bottom"
     layout="topleft"/>
</panel>
