<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<pie_menu
name="Attachment Pie">
    <pie_menu
    label="Manage"
    layout="topleft"
    name="Pie Object Manage">
        <pie_slice
        label="My;Appearance"
        layout="topleft"
        name="Change Outfit">
            <pie_slice.on_click
            function="CustomizeAvatar" />
            <pie_slice.on_enable
            function="Edit.EnableCustomizeAvatar" />
        </pie_slice>
        <pie_slice
        label="My Friends"
        layout="topleft"
        name="Friends...">
            <pie_slice.on_click
            function="SideTray.PanelPeopleTab"
            parameter="friends_panel" />
        </pie_slice>
        <pie_slice
        label="Dump XML"
        name="Dump XML">
            <pie_slice.on_click
            function="Advanced.AppearanceToXML" />
            <pie_slice.on_visible
            function="Advanced.EnableAppearanceToXML"/>
        </pie_slice>
        <pie_slice
        label="Debug;Textures"
        name="Debug...">
            <pie_slice.on_click
            function="Avatar.Debug" />
            <pie_slice.on_visible
            function="IsGodCustomerService"/>
        </pie_slice>
        <pie_slice
        label="Block;Particle;Owner"
        name="Mute Particle">
            <pie_slice.on_click
            function="Particle.Mute" />
            <pie_slice.on_enable
            function="EnableMuteParticle" />
        </pie_slice>
        <pie_slice
        label="Copy;Avatar;UUID"
        enabled="true"
        name="Copy Avatar UUID">
            <pie_slice.on_click
            function="Avatar.GetUUID" />
        </pie_slice>
        <pie_slice
        label="Copy;Avatar;SLURL"
        name="CopySLURL"
        enabled="true">
            <pie_slice.on_click
            function="Avatar.GetSLURL" />
        </pie_slice>
        <pie_slice
        label="My Groups"
        layout="topleft"
        name="Groups...">
            <pie_slice.on_click
            function="SideTray.PanelPeopleTab"
            parameter="groups_panel" />
        </pie_slice>
    </pie_menu>
    <pie_slice
    enabled="false"
    label="Drop"
    name="Drop">
        <pie_slice.on_click
        function="Attachment.Drop" />
        <pie_slice.on_enable
        function="Attachment.EnableDrop" />
    </pie_slice>
    <pie_slice
    enabled="true"
    label="Detach"
    name="Detach">
        <pie_slice.on_click
        function="Attachment.Detach" />
        <pie_slice.on_enable
        function="Attachment.EnableDetach" />
    </pie_slice>
    <pie_slice
    enabled="false"
    label="Touch"
    name="Attachment Object Touch">
        <pie_slice.on_click
        function="Object.Touch" />
        <pie_slice.on_enable
        function="Object.EnableTouch"
        name="EnableTouch"/>
    </pie_slice>
    <pie_slice
    enabled="true"
    label="Edit"
    name="Edit">
        <pie_slice.on_click
        function="Object.Edit" />
        <pie_slice.on_enable
        function="EnableEdit" />
    </pie_slice>
    <pie_slice
    label="Reset;Skeleton"
    name="Reset Skeleton">
        <pie_slice.on_click
        function="Avatar.ResetSkeleton" />
    </pie_slice>
    <pie_menu
    name="Attachment Pie More"
    label="More">
        <pie_separator name="seperator"/>
        <pie_slice
        label="Edit;My;Shape"
        layout="topleft"
        name="Edit My Shape">
            <pie_slice.on_click
            function="EditShape" />
            <pie_slice.on_enable
            function="Edit.EnableEditShape" />
        </pie_slice>
        <pie_separator name="seperator"/>
        <pie_slice
        label="Edit;My;Outfit" 
        layout="topleft"
        name="Edit Outfit">
            <pie_slice.on_click
            function="EditOutfit" />
            <pie_slice.on_enable
            function="Edit.EnableCustomizeAvatar" />
        </pie_slice>
        <pie_slice
        label="My Profile"
        layout="topleft"
        name="Profile...">
            <pie_slice.on_click
            function="ShowAgentProfile"
            parameter="agent" />
        </pie_slice>
        <pie_separator name="seperator"/>
        <pie_slice
        label="Hover;Height"
        enabled="true"
        name="Hover Height">
            <pie_slice.on_click
            function="HoverHeight" />
            <pie_slice.on_enable
            function="Edit.EnableHoverHeight" />
        </pie_slice>
        <pie_separator name="seperator"/>
    </pie_menu>
    <pie_slice
    label="Sit Here"
    autohide="true"
    name="Sit Down Here">
        <pie_slice.on_click
        function="Self.SitDown"
        parameter="" />
        <pie_slice.on_enable
        function="Self.EnableSitDown" />
    </pie_slice>
    <pie_slice
    label="Stand Up"
    autohide="true"
    name="Stand Up">
        <pie_slice.on_click
        function="Self.StandUp" />
        <pie_slice.on_enable
        function="Self.EnableStandUp" />
    </pie_slice>
</pie_menu>
