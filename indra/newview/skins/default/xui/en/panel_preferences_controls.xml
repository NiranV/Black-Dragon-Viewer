       </radio_item>
       <radio_item
       height="16"
       label="Chat"
       value="1"
       layout="topleft"
       name="radio_start_chat"
       left_pad="10"
       top_delta="0"
       width="70">
             <radio_item.check_button
             image_unselected="Checkbox_Off"
             image_selected="Checkbox_On"
             image_disabled="Checkbox_Off_Disabled"
             image_disabled_selected="Checkbox_On_Disabled"
