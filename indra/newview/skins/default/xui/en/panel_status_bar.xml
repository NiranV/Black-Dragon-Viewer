<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_opaque="false"
 background_visible="false"
 bg_opaque_color="DkGray"
 chrome="true"
 follows="top|right"
 height="55"
 layout="topleft"
 left="0"
 mouse_opaque="false"
 name="status"
 top="19"
 tab_stop="false"
 width="1000">
    <panel.string
     name="packet_loss_tooltip">
        Packet Loss
    </panel.string>
    <panel.string
     name="bandwidth_tooltip">
        Bandwidth
    </panel.string>
    <panel.string
     name="time">
        [hour12, datetime, slt]:[min, datetime, slt] [ampm, datetime, slt] [timezone,datetime, slt]
    </panel.string>
    <panel.string
     name="timeTooltip">
        [weekday, datetime, slt], [day, datetime, slt] [month, datetime, slt] [year, datetime, slt]
    </panel.string>
    <chiclet_notification
    follows="right|top"
    height="26"
    mouse_opaque="false"
    layout="topleft"
    left="-76"
    max_displayed_count="99"
    name="notification_well"
    top_pad="-1"
    width="190">
     <button
     auto_resize="false"
     follows="top|right"
     layout="topleft"
     halign="left"
     height="22"
     image_pressed="Sys_BG_Pressed"
     image_pressed_selected="Sys_BG_Pressed"
     image_selected="Sys_BG"
     image_unselected="Sys_BG"
     left="0"
     top_delta="0"
     name="Unread"
     tool_tip="Notifications"
     width="48">
     <init_callback
     function="Button.SetDockableFloaterToggle"
     parameter="notification_well_window" />
     </button>
    </chiclet_notification>
    <text
     type="string"
     font="SansSerifSmall"
     text_readonly_color="TimeTextColor"
     follows="right|top"
     halign="right"
     height="16"
     top="7"
     layout="topleft"
     left="-300"
     name="TimeText"
     tool_tip="Current time (Pacific)"
     width="80">
        24:00 AM PST
    </text>
    <button
     follows="right|top"
     height="16"
     image_selected="Play_Off"
     image_unselected="Pause_Off"
     image_pressed="Pause_Press"
     image_pressed_selected="Play_Press"
     is_toggle="true"
     left_pad="5"
     top="4"
     name="media_toggle_btn"
     tool_tip="Start/Stop All Media (Music, Video, Web pages)"
     width="16" >
    </button>
    <button
     follows="right|top"
     height="16"
     image_selected="AudioMute_Off"
     image_pressed="Audio_Press"
     image_unselected="Audio_Off"
     is_toggle="true"
     left_pad="5"
     top="5"
     name="volume_btn"
     width="16" />
	  <icon
	  follows="right|top"
	  height="16"
	  image_name="Draw_Distance"
	  left_pad="8"
	  top="5"
	  name="draw_distance_icon"
	  tool_tip="Set the rendering distance in meters here"
	  width="16" />
	  <icon
	  follows="right|top"
	  height="14"
	  image_name="Presets_Icon"
	  left_pad="8"
	  top="6"
	  name="presets_icon"
	  width="18" />

				<text
		type="string"
		font="SansSerifSmallBold"
		follows="right|top"
		text_color="0.2 0.9 0.3 1"
		halign="left"
		height="16"
		top="7"
		layout="topleft"
		left_pad="12"
		name="FPSText"
		tool_tip="Your current FPS"
		width="36">
			10.00
		</text>
</panel>
