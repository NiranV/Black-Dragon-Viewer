<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 can_minimize="true"
 can_close="true"
 height="114"
 layout="topleft"
 name="move_floater"
 save_rect="true"
 save_visibility="true"
 width="105">
    <string
     name="walk_forward_tooltip">
        Walk Forward &lt;green&gt;(Default: Up Arrow or W)&lt;/green&gt;
    </string>
    <string
     name="walk_back_tooltip">
        Walk Backwards &lt;green&gt;(Default: Down Arrow or S)&lt;/green&gt;
    </string>
    <string
     name="walk_left_tooltip">
        Walk left &lt;green&gt;(Default: Left Arrow or A)&lt;/green&gt;
    </string>
    <string
     name="walk_right_tooltip">
        Walk right &lt;green&gt;(Default: Right Arrow or D)&lt;/green&gt;
    </string>
    <string
     name="run_forward_tooltip">
        Run Forward &lt;green&gt;(Default: Up Arrow or W)&lt;/green&gt;
    </string>
    <string
     name="run_back_tooltip">
        Run Backwards &lt;green&gt;(Default: Down Arrow or S)&lt;/green&gt;
    </string>
    <string
     name="run_left_tooltip">
        Run left &lt;green&gt;(Default: Left Arrow or A)&lt;/green&gt;
    </string>
    <string
     name="run_right_tooltip">
        Run right &lt;green&gt;(Default: Right Arrow or D)&lt;/green&gt;
    </string>
    <string
     name="fly_forward_tooltip">
        Fly Forward &lt;green&gt;(Default: Up Arrow or W)&lt;/green&gt;
    </string>
    <string
     name="fly_back_tooltip">
        Fly Backwards &lt;green&gt;(Default: Down Arrow or S)&lt;/green&gt;
    </string>
    <string
     name="fly_left_tooltip">
        Fly left &lt;green&gt;(Default: Left Arrow or A)&lt;/green&gt;
    </string>
    <string
     name="fly_right_tooltip">
        Fly right &lt;green&gt;(Default: Right Arrow or D)&lt;/green&gt;
    </string>
    <string
     name="fly_up_tooltip">
        Fly up &lt;green&gt;(Default: Space or Page Up)&lt;/green&gt;
    </string>
    <string
     name="fly_down_tooltip">
        Fly down &lt;green&gt;(Default: C or Page Down)&lt;/green&gt;
    </string>
    <string
     name="jump_tooltip">
        Jump &lt;green&gt;(Default: Space or Page Up)&lt;/green&gt;
    </string>
    <string
     name="crouch_tooltip">
        Crouch &lt;green&gt;(Default: C or Page Down)&lt;/green&gt;
    </string>
    <string
     name="walk_title">
        Walk
    </string>
    <string
     name="run_title">
        Run
    </string>
    <string
     name="fly_title">
        Fly
    </string>
    <panel
     border="false"
     height="83"
     follows="left|top"
     layout="topleft"
     left="0"
     mouse_opaque="false"
     name="panel_actions"
     top="0"
     width="103">
        <!-- Buttons in panel are organized in 3 columns to enable their easy vertical adjustment via top_pad-->
        <!-- Left column -->
        <button
         follows="left|bottom"
         height="24"
         image_selected="Movement_TurnLeft_On"
         image_pressed_selected="Movement_TurnLeft_On"
         image_unselected="Movement_TurnLeft_Off"
         layout="topleft"
         left="5"
         name="turn left btn"
         scale_image="false"
         tool_tip="Turn left &lt;green&gt;(Default: Shift + Left Arrow or A)&lt;/green&gt;"
         top="34"
         width="24" />
        <joystick_slide
         follows="left|bottom"
         height="10"
         image_selected="Movement_Left_On"
         image_pressed_selected="Movement_Left_On"
         image_unselected="Movement_Left_Off"
         layout="topleft"
         left_delta="4"
         name="move left btn"
         quadrant="left"
         scale_image="false"
         tool_tip="Walk left &lt;green&gt;(Default: Left Arrow or A)&lt;/green&gt;"
         top_pad="10"
         width="19" />
        <!-- Right column -->
        <button
         follows="left|bottom"
         height="24"
         image_selected="Movement_TurnRight_On"
         image_pressed_selected="Movement_TurnRight_On"
         image_unselected="Movement_TurnRight_Off"
         layout="topleft"
         right="-22"
         name="turn right btn"
         scale_image="false"
         tool_tip="Turn right &lt;green&gt;(Default: Shift + Right Arrow or D)&lt;/green&gt;"
         top="34"
         width="24" />
        <joystick_slide
         follows="left|bottom"
         height="10"
         image_selected="Movement_Right_On"
         image_pressed_selected="Movement_Right_On"
         image_unselected="Movement_Right_Off"
         layout="topleft"
         name="move right btn"
         quadrant="right"
         scale_image="false"
         tool_tip="Walk right &lt;green&gt;(Default: Right Arrow or D)&lt;/green&gt;"
         top_pad="10"
         width="19" />
        <!-- Middle column -->
        <joystick_turn
         follows="left|bottom"
         height="24"
         image_selected="Movement_Forward_On"
         image_pressed_selected="Movement_Forward_On"
         image_unselected="Movement_Forward_Off"
         layout="topleft"
         left="30"
         name="forward btn"
         quadrant="up"
         scale_image="false"
         tool_tip="Walk forward &lt;green&gt;(Default: Up Arrow or W)&lt;/green&gt;"
         top="20"
         width="24" />
        <joystick_turn
         follows="left|bottom"
         height="24"
         image_selected="Movement_Backward_On"
         image_pressed_selected="Movement_Backward_On"
         image_unselected="Movement_Backward_Off"
         layout="topleft"
         left_delta="0"
         name="backward btn"
         quadrant="down"
         scale_image="false"
         tool_tip="Walk backward &lt;green&gt;(Default: Down Arrow or S)&lt;/green&gt;"
         top_pad="5"
         width="24" />
        <!-- Fly up/down (jump/crouch) buttons -->
        <button
         follows="left|bottom"
         height="19"
         image_selected="Movement_Up_On"
         image_pressed_selected="Movement_Up_On"
         image_unselected="Movement_Up_Off"
         layout="topleft"
         right="-8"
         name="move up btn"
         scale_image="false"
         tool_tip="Fly up &lt;green&gt;(Default: Space or Page Up)&lt;/green&gt;"
         top="25"
         width="10" />
        <button
         follows="left|bottom"
         height="19"
         image_selected="Movement_Down_On"
         image_pressed_selected="Movement_Down_On"
         image_unselected="Movement_Down_Off"
         layout="topleft"
         name="move down btn"
         scale_image="false"
         tool_tip="Fly down &lt;green&gt;(Default: C or Page Down)&lt;/green&gt;"
         top_pad="10"
         width="10" />
    </panel>
<!-- Width and height of this panel should be synchronized with panel_stand_stop_flying.xml -->
    <panel
     border="false"
     height="27"
     layout="topleft"
     left="0"
     name="panel_modes"
     top_pad="0"
     width="103">
        <button
         follows="left|bottom"
         height="21"
         image_overlay="Move_Walk_Off"
         image_selected="PushButton_Selected_Press"
	 label=""
         layout="topleft"
         name="mode_walk_btn"
         left="6"
         pad_right="0"
         tool_tip="Walking mode &lt;green&gt;(Ctrl + R)&lt;/green&gt;"
         top="2"
         width="31" />
        <button
         follows="left|bottom"
         height="21"
         image_overlay="Move_Run_Off"
         image_selected="PushButton_Selected_Press"
	 label=""
         layout="topleft"
         left_pad="0"
         name="mode_run_btn"
         pad_left="0"
         pad_right="0"
         tool_tip="Running mode &lt;green&gt;(Ctrl + R)&lt;/green&gt;"
         top="2"
         width="31" />
        <button
         follows="left|bottom"
         height="21"
         image_overlay="Move_Fly_Off"
         image_selected="PushButton_Selected_Press"
	 label=""
         layout="topleft"
         left_pad="0"
         name="mode_fly_btn"
         pad_left="0"
         pad_right="0"
         tool_tip="Flying mode &lt;green&gt;(Default: F or End)&lt;/green&gt;"
         top="2"
         width="31" />
    </panel>
    <button
        follows="left|bottom"
        height="21"
        label="Stand"
        layout="topleft"
        left="6"
        name="stand_btn"
        tool_tip="Click here to stand up."
        top_delta="2"
        width="93" />
       <button
        follows="left|bottom"
        height="21"
        label="Stop Flying"
        layout="topleft"
        left="6"
        name="stop_fly_btn"
        tool_tip="Stop flying"
        top_delta="0"
        width="93" />
</floater>
