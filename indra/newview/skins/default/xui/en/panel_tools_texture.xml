             left_pad="7"
             name="checkbox fullbright"
             top_delta="0"
             width="81" />
            <combo_box
             height="23"
             follows="top|left"
             layout="topleft"
             label="Alpha mode"
             left_delta="3"
             name="combobox alphamode"
             top_pad="1"
             width="130">
                <combo_box.item
                 label="None"
                 name="None"
                 value="None" />
                <combo_box.item
                 label="Alpha blending"
                 name="Alpha blending"
                 value="Alpha blending" />
                <combo_box.item
                 label="Alpha masking"
                 name="Alpha masking"
                 value="Alpha masking" />
                <combo_box.item
                 label="Emissive mask"
                 name="Emissive mask"
                 value="Emissive mask" />
            </combo_box>
            <spinner
             decimal_digits="0"
             min_val="0"
             max_val="255"
             follows="left|top"
             height="19"
             initial_value="55"
             layout="topleft"
             top_pad="2"
             label_width="78"
             label="Mask cutoff"
             left_delta="2"
             increment="1"
             name="maskcutoff"
             width="128" />
            <texture_picker
             allow_no_texture="true"
