             height="16"
             layout="topleft"
             left="230"
             name="color trans"
             text_readonly_color="LabelDisabledColor"
             top="3"
             width="60">
                Alpha %
            </text>
            <spinner
             decimal_digits="0"
             follows="left|top"
             height="19"
             increment="2"
             initial_value="0"
             layout="topleft"
             left_delta="0"
             max_val="100"
             name="ColorTrans"
             top_pad="2"
             width="50" />
            <text
             type="string"
             length="1"
             follows="left|top"
             height="16"
             layout="topleft"
             left="230"
             name="glow label"
             text_readonly_color="LabelDisabledColor"
             top_pad="5"
             width="60">
                Glow
            </text>
