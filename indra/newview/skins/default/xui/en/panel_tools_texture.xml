             left="10"
             name="bumpytexture control"
             tool_tip="Click to choose a picture"
             top="76"
             width="64" />
            <combo_box
             height="23"
             layout="topleft"
             follows="top|left"
             left_pad="10"
             label="Normalmap"
             name="combobox bumpiness"
             top_delta="0"
             width="130">
                <combo_box.item
                 label="None"
                 name="None"
                 value="None" />
                <combo_box.item
                 label="Brightness"
                 name="Brightness"
                 value="Brightness" />
                <combo_box.item
                 label="Darkness"
                 name="Darkness"
                 value="Darkness" />
                <combo_box.item
                 label="woodgrain"
