             increment="1"
             initial_value="0"
			 label="Rotation degrees"
             layout="topleft"
			 label_width="205"
             left="10"
             max_val="360"
             min_val="0"
             name="shinyRot"
             width="265" />

            <spinner
             follows="left|top"
             height="19"
             initial_value="0"
             label="Horizontal/Vertical offset"
             label_width="135"
             layout="topleft"
             left="10"
