<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<toggleable_menu
        height="602"
        layout="topleft"
        mouse_opaque="false"
        name="save_settings_menu_adjust"
        width="120">
    <menu_item_check
            name="save_as_local_setting" 
            label="Save Locally">
        <menu_item_check.on_check
                function="FlyoutCombo.Button.Check"
                userdata="save_local" />
        <menu_item_check.on_click
                function="FlyoutCombo.Button.Action"
                userdata="save_local"/>
    </menu_item_check>
    <menu_item_check 
            name="save_as_new_settings" 
            label="Save As">
        <menu_item_check.on_check
                function="FlyoutCombo.Button.Check"
                userdata="saveas" />
        <menu_item_check.on_click
                function="FlyoutCombo.Button.Action"
                userdata="saveas" />
    </menu_item_check>
</toggleable_menu>
