  <web_browser
  visibility_control="ExperimentalLogin"
  tab_stop="false" 
  trusted_content="true" 
  bg_opaque_color="Black"
  border_visible="false"
  top="-600"
  follows="all"
  start_url="http://www.youtube.com/watch_popup?v=lUCdjpphUtw&amp;vq=hd1080"
  left="0"
  name="html"
  height="640"
  width="996" />
  
  <icon
  follows="bottom|left|right"
  height="165"
  image_name="NavBar_BG_middle"
  color="0 0 0 0.8"
  layout="topleft"
  name="login_bg"
  mouse_opaque="false"
  visible="true"
  width="996"
  left="0"
  top="-155"/>
  <button
  follows="left|bottom|right"
  height="35"
  image_unselected="transparentj2c"
  image_selected="transparentj2c"
  label="Login to Secondlife™"
  font="SansSerifHuge"
  font.style="BOLD"
  label_color="1 1 1 0.8"
  layout="topleft"
  left="275"
  right="-275"
  name="connect_btn"
  top="-153"
  width="996"/>
  <panel
  follows="right|left|bottom"
  height="100"
  layout="topleft"
  left="0"
  name="panel_login2"
  focus_root="true" 
  top="-121"
  width="996">
    <layout_stack
    border_size="0"
    follows="all"
    height="100"
    layout="topleft"
    left="0"
    mouse_opaque="false"
    name="root_stack"
    orientation="horizontal"
    top="0"
    width="996">
      <layout_panel
      auto_resize="true"
      follows="all"
      height="100"
      layout="topleft"
      mouse_opaque="false"
      name="info_panel"
      top_pad="0"
      width="200">
        <icon
        follows="bottom|left"
        height="35"
        color="1 1 1 0.75"
        image_name="SL_Logo"
        layout="topleft"
        name="vicon"
        mouse_opaque="false"
        visible="true"
        width="35"
        left="2"
        top="1"/>
        <text
        follows="left|bottom"
        font="SansSerifBig"
        font_shadow="soft"
        font.style="BOLD"
        text_color="EmphasisColor"
        halign="left"
        height="17"
        top="4"
        left_pad="-2"
        name="app_name_text"
        width="180"
        word_wrap="true">
           [APP_NAME]
        </text>
        <text
        follows="left|bottom"
        font="SansSerif"
        font.style="BOLDITALIC"
        font_shadow="soft"
        text_color="EmphasisColor"
        halign="left"
        height="28"
        top_pad="0"
        left="35"
        name="different_text"
        width="180"
        word_wrap="true">
           Rawr!
        </text>
        <button
        follows="left|bottom|right"
        height="20"
        image_unselected="transparentj2c"
        image_selected="transparentj2c"
        label="[CHANNEL] [VERSION]"
        font="SansSerif"
        font.style="BOLD"
        label_color="EmphasisColor"
        layout="topleft"
        left="5"
        halign="left"
        name="channel_text"
        top="83"
        width="200">
        <button.commit_callback
          function="Floater.Show"
          parameter="sl_about"/>
        </button>
      </layout_panel>
      <layout_panel
      auto_resize="false"
      follows="all"
      height="100"
      layout="topleft"
      mouse_opaque="false"
      name="root_panel"
      top_pad="0"
      width="200">
        <icon
        follows="left|top"
        height="34"
        image_name="user-entry"
        layout="topleft"
        name="login_panel"
        mouse_opaque="false"
        visible="true"
        width="200"
        left="0"
        top="10"/>
        <line_editor
        allow_text_entry="true"
        commit_on_focus_lost="false"
        follows="left|bottom"
        height="22"
        label="Username"
        left_delta="35"
        max_chars="128"
        tool_tip="The username you chose when you registered, like bobsmith12 or Steller Sunshine"
        top_delta="6"
        name="username_combo"
        width="152"/>
        <icon
        follows="left|top"
        height="34"
        image_name="pw-entry"
        layout="topleft"
        name="login_panel"
        mouse_opaque="false"
        visible="true"
        width="200"
        left="0"
        top="45"/>
        <line_editor
        follows="left|bottom"
        commit_on_focus_lost="false"
        height="22"
        max_length_bytes="16"
        name="password_edit"
        label="Password"
        is_password="true" 
        select_on_focus="true"
        left_delta="35"
        top_delta="6"
        width="152" />
        <check_box
        control_name="RememberPassword"
        follows="left|bottom"
        font="SansSerifSmall"
        height="18"
        left="35"
        label="Remember password"
        top_pad="5"
        name="remember_check"
        width="20"/>
      </layout_panel>
      <layout_panel
      auto_resize="true"
      follows="all"
      height="100"
      layout="topleft"
      mouse_opaque="false"
      name="help_panel"
      top_pad="0"
      width="200">
        <button
        follows="right|top"
        height="18"
        control_name="PreferencesLogin"
        image_unselected="transparentj2c"
        image_selected="transparentj2c"
        label="Settings"
        is_toggle="false"
        font="SansSerifBig"
        font.style="BOLD"
        label_color="1 1 1 0.7"
        layout="topleft"
        left="0"
        halign="right"
        name="pref_btn"
        top="10"
        width="200">
              <button.commit_callback
              function="Floater.Toggle"
              parameter="preferences"/>
        </button>
        <button
        follows="right|top"
        height="18"
        image_unselected="transparentj2c"
        image_selected="transparentj2c"
        label="Sign Up"
        font="SansSerifBig"
        font.style="BOLD"
        label_color="1 1 1 0.7"
        layout="topleft"
        left="0"
        halign="right"
        name="create_new_account_text"
        top_pad="0"
        width="200"/>
        <button
        follows="right|top"
        height="18"
        image_unselected="transparentj2c"
        image_selected="transparentj2c"
        label="Forgot Login details?"
        font="SansSerifBig"
        font.style="BOLD"
        label_color="1 1 1 0.7"
        layout="topleft"
        left="0"
        halign="right"
        name="forgot_password_text"
        top_pad="0"
        width="200"/>
        <button
        follows="right|top"
        height="18"
        image_unselected="transparentj2c"
        image_selected="transparentj2c"
        label="Grid Status"
        font="SansSerifBig"
        font.style="BOLD"
        label_color="1 1 1 0.7"
        layout="topleft"
        left="0"
        halign="right"
        name="grid_btn"
        top_pad="0"
        width="200">
        <button.commit_callback
          function="PromptShowURL"
          parameter="WebLaunchExternalTarget,http://status.secondlifegrid.net/"/>
        </button>
        <button
        follows="right|top"
        height="18"
        control_name="FirstStart"
        image_unselected="transparentj2c"
        image_selected="transparentj2c"
        label="Quit [APP_NAME]"
        font="SansSerifBig"
        font.style="BOLD"
        label_color="1 1 1 0.7"
        layout="topleft"
        left="0"
        halign="right"
        name="quit_btn"
        top_pad="0"
        width="200"/>
      </layout_panel>
    </layout_stack>
  </panel>
</panel>
