<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
	 background_visible="false"
     bevel_style="in"
     follows="top|left|right"
     height="24"
     label="im_header"
	 layout="topleft"
     name="im_header"
     width="310">
    <icon
    follows="top|left|right"
    height="22"
    name="bg"
    mouse_opaque="false"
    color="1 1 1 0.4"
    image_name="Chat_Separator"
    left="1"
    top="1"
    width="310" />
	<avatar_icon
         follows="left"
         height="18"
         image_name="Generic_Person"
         layout="topleft"
         left="3"
         mouse_opaque="true"
         name="avatar_icon"
         top="3"
         width="18" />
    <text
      parse_urls="false"
      allow_scroll="false"
      v_pad = "6"
      read_only = "true"
      follows="left|right"
      font.style="BOLD"
      height="24"
      layout="topleft"
      left_pad="5"
      right="-120"
      name="user_name"
      text_color="0.2 0.9 0.3 1"
      top="0"
      translate="false"
      use_ellipses="true"
      valign="top" 
      value="TestString PleaseIgnore" />
  <text
    allow_scroll="false"
    font="SansSerifSmall"
    follows="right"
    halign="right"
    height="13"
    layout="topleft"
    left_pad="5"
    name="time_box"
    right="-1"
    top="7"
    value="23:30"
    width="110" />
</panel>
