<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
  can_minimize="false" 
  can_resize="false"
  height="115"
  layout="topleft"
  name="window_size"
  title="WINDOW SIZE"
  width="290">
    <text
     follows="top|left"
     font="SansSerif"
     height="16"
     left="10"
     top="0" 
     name="windowsize_text"
     width="270">
     Click a template on the right or set a custom
resolution down below:
    </text>
    <spinner
     decimal_digits="0"
     follows="left|top"
     height="23"
     increment="1"
     initial_value="1280"
     label="Width (X):"
     label_width="115"
     layout="topleft"
     left="10"
     max_val="6000"
     min_val="480"
     name="window_x"
     top_pad="20"
     width="170" />
    <spinner
     decimal_digits="0"
     follows="left|top"
     height="23"
     increment="1"
     initial_value="720"
     label="Height (Y):"
     label_width="115"
     layout="topleft"
     left="10"
     max_val="2560"
     min_val="320"
     name="window_y"
     top_pad="0"
     width="170" />
    <button
     follows="right|bottom"
     height="16"
     label="⌊1024 x 768⌉"
     left="190"
     image_unselected="Transparent.j2c"
     image_selected="Transparent.j2c"
     name="1024 x 768"
     halign="left"
     top="37"
     width="100" />
    <button
     follows="right|bottom"
     height="16"
     label="⌊1280 x 720⌉"
     left="190"
     image_unselected="Transparent.j2c"
     image_selected="Transparent.j2c"
     halign="left"
     name="1280 x 720"
     top_pad="2"
     width="100" />
    <button
     follows="right|bottom"
     height="16"
     label="⌊1440 x 900⌉"
     left="190"
     image_unselected="Transparent.j2c"
     image_selected="Transparent.j2c"
     halign="left"
     name="1440 x 900"
     top_pad="2"
     width="100" />
    <button
     follows="right|bottom"
     height="16"
     label="⌊1540 x 960⌉"
     image_unselected="Transparent.j2c"
     image_selected="Transparent.j2c"
     left="190"
     halign="left"
     name="1540 x 960"
     top_pad="2"
     width="100" />
    <button
     follows="right|bottom"
     height="23"
     label="Set"
     left="6"
     name="set_btn"
     top="85"
     width="85" />
    <button
     follows="right|bottom"
     height="23"
     label="Cancel"
     left_pad="5"
     name="cancel_btn"
     top_delta="0"
     width="85" />
</floater>
