<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 height="54"
 layout="topleft"
 name="Environment Editor Floater"
 save_rect="true"
 title="Environment Settings"
 width="700">
 
 <check_box
   layout="topleft"
   control_name="UseDayCycle"
   left="10"
   follows="top|left"
   label="Use Day Cycle instead of fixed Sky"
   name="sky_dayc_settings_check"
   top="2"
   height="16"
   width="100"/>
 <check_box
   layout="topleft"
   control_name="RenderInterpolateWindlight"
   left="270"
   follows="top|left"
   label="Use Windlight Transitions"
   name="RenderInterpolateWindlight"
   top="2"
   height="16"
   width="100"/>
 <slider
         control_name="RenderWindlightInterpolateTime"
         decimal_digits="0"
         follows="left|top"
         height="10"
         increment="1"
         initial_value="5"
         max_val="30"
         label="Time(s)"
         layout="topleft"
         left="470"
         top_delta="3"
         name="RenderWindlightInterpolateTime"
         width="180" />
 <panel
  height="70"
  layout="topleft"
  left="0"
  name="user_environment_settings"
  top="20"
  width="491">
 
 <!-- Sky/Day Cycle Settings -->
 <icon
	follows="top|left"
	height="26"
	color="1 1 1 1"
	image_name="Panel_Background"
	layout="topleft"
	name="vicon"
	mouse_opaque="false"
	visible="true"
	width="686"
	top="0"
	left="7"/>
 <icon
		follows="left|top|right"
		image_name="Toolbar_Middle_Off"
		height="23"
		width="70"
		layout="topleft"
		left="9"
		top="2"/>
 <text
  name="fixed_sky_label"
  invisibility_control="UseDayCycle"
  follows="top|left"
  height="16"
  layout="topleft"
  left_delta="7"
  top_delta="5"
  width="64">
  		Sky Preset
  </text>
 <text
  name="day_cycle_label"
  visibility_control="UseDayCycle"
  follows="top|left"
  height="16"
  layout="topleft"
  left_delta="0"
  top_delta="0"
  width="64">
  		Day Cycle
  </text>
  <combo_box
   follows="top|left"
   left_pad="0"
   height="23"
   invisibility_control="UseDayCycle"
   name="sky_settings_preset_combo"
   top_delta="-5"
   width="150">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
      <combo_box.combo_button
            image_unselected="Toolbar_Middle_Off"
            image_selected="Toolbar_Middle_Selected"
            image_disabled="Toolbar_Middle_Off" />
            <combo_box.drop_down_button
            image_unselected="Toolbar_Middle_Off"
            image_selected="Toolbar_Middle_Selected"
            image_pressed="Toolbar_Middle_Selected" 
            image_pressed_selected="Toolbar_Middle_Selected"
            image_disabled="Toolbar_Middle_Off" />
        </combo_box>
  <combo_box
   follows="top|left"
   visibility_control="UseDayCycle"
   name="dayc_settings_preset_combo"
   height="23"
   top_delta="0"
   width="150">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
      <combo_box.combo_button
            image_unselected="Toolbar_Middle_Off"
            image_selected="Toolbar_Middle_Selected"
            image_disabled="Toolbar_Middle_Off" />
            <combo_box.drop_down_button
            image_unselected="Toolbar_Middle_Off"
            image_selected="Toolbar_Middle_Selected"
            image_pressed="Toolbar_Middle_Selected" 
            image_pressed_selected="Toolbar_Middle_Selected"
            image_disabled="Toolbar_Middle_Off" />
        </combo_box>
  
  <icon
		follows="left|top|right"
		image_name="Toolbar_Middle_Off"
		height="23"
		width="80"
		layout="topleft"
		left_pad="29"
		top="2"/>
    <text
  name="water_label"
  follows="top|left"
  height="16"
  layout="topleft"
  left_delta="5"
  top_delta="5"
  width="75">
  		Water Preset
  </text>
  <combo_box
   follows="top|left"
   left_pad="1"
   name="water_settings_preset_combo"
   top_delta="-5"
   width="150">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
      <combo_box.combo_button
            image_unselected="Toolbar_Middle_Off"
            image_selected="Toolbar_Middle_Selected"
            image_disabled="Toolbar_Middle_Off" />
            <combo_box.drop_down_button
            image_unselected="Toolbar_Middle_Off"
            image_selected="Toolbar_Middle_Selected"
            image_pressed="Toolbar_Middle_Selected" 
            image_pressed_selected="Toolbar_Middle_Selected"
            image_disabled="Toolbar_Middle_Off" />
        </combo_box>
  </panel>
 <button
   follows="left|top"
   height="23"
   label=""
   tool_tip="Open Water Editor"
   image_overlay="OptionsMenu_Off"
   image_hover_unselected="Toolbar_Middle_Over"
	  image_selected="Toolbar_Middle_Selected"
	  image_unselected="Toolbar_Middle_Off"
   layout="topleft"
   left_pad="0"
   name="water_btn"
   top_delta="2"
   width="27" >
  <button.commit_callback
	  function="World.EnvPreset"
	  parameter="edit_water" />
  </button>
 <button
   follows="left|bottom"
   control_name="UseEnvironmentFromRegion"
   height="23"
   is_toggle="true"
   label="Use Estate Time"
   tool_tip="Switch between Regio-light or custom Sky/Water/Day-cycles"
   image_hover_unselected="Toolbar_Middle_Over"
	  image_selected="Toolbar_Middle_Selected"
	  image_unselected="Toolbar_Middle_Off"
   layout="topleft"
   left_pad="1"
   name="estate_btn"
   top_delta="0"
   width="111"/>
  <button
   follows="left|bottom"
   height="23"
   label="Cancel"
   image_hover_unselected="Toolbar_Middle_Over"
	  image_selected="Toolbar_Middle_Selected"
	  image_unselected="Toolbar_Middle_Off"
   layout="topleft"
   left_pad="1"
   name="cancel_btn"
   width="60" />
  <button
   follows="left|bottom"
   height="23"
   label=""
   layout="topleft"
   tool_tip="Open Sky Editor"
   image_overlay="OptionsMenu_Off"
   image_hover_unselected="Toolbar_Middle_Over"
	  image_selected="Toolbar_Middle_Selected"
	  image_unselected="Toolbar_Middle_Off"
   left="231"
   name="sky_btn"
   top_delta="0"
   width="27" >
  <button.commit_callback
	  function="World.EnvPreset"
	  parameter="edit_sky" />
  </button>
</floater>
